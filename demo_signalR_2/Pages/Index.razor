@page "/"

@using System.Globalization;
@using demo_signalR_2.Components
@using demo_signalR_2.Data

<PageTitle>BlazorServer</PageTitle>

<style>
    .wrapper {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .wrapper .item {
        width: 227px;
        height: 320px;
        background-color: white;
        border-radius: 8px;
        transition: transform 0.2s;
    }

    .wrapper .item:hover {
        transform: scale(1.15);
        transition: transform 0.4s 0.1s;
        background: linear-gradient(#D601AA, #FFEE12)
    }

    .horizontal-list {
        display: flex;
        gap: 12px;
    }

    .horizontal-list::-webkit-scrollbar {
        height: 8px;
        width: 0px;
    }

    .horizontal-list::-webkit-scrollbar-thumb {
        border-radius: 100vh;
    }

    .horizontal-list::-webkit-scrollbar-thumb:hover {
        background: #FFEE12;
    }

    .horizontal-list .item {
        width: 227px;
        height: 300px;
        background-color: white;
        border-radius: 8px;
        margin-bottom: 8px;
    }

    .horizontal-list .item:hover {
                background: linear-gradient(white, #FFEE12);
        cursor: pointer
    }

</style>

<div class="d-flex flex-column gap-4 ma-4">
    <div class="d-flex flex-column rounded py-6 px-6 gap-2 " 
         style="background-color: #013366">

        <div class="d-flex align-center gap-2" style="color: #FFEE12">
            
            <ClockCountDown RemainingSeconds="17423"/>
            <MudIcon Icon="@Icons.Material.Filled.Bolt" Size="Size.Large" />
            <MudText Style="font-style: italic; font-size: 28px; font-weight: bold">GIỜ VÀNG DEAL SỐC</MudText>
        </div>

        <div class="wrapper">
            <div class="item">item-1</div>
            <div class="item">item-2</div>
            <div class="item">item-3</div>
            <div class="item">item-4</div>
            <div class="item">item-5</div>
            <div class="item">item-6</div>
            <div class="item">item-7</div>
            <div class="item">item-8</div>

            
        </div>

    </div>

    <div class="d-flex flex-column rounded py-6 px-6 gap-2 "
         style="background-color: #013366">

        <div class="d-flex align-center gap-2" style="color: #FFEE12">

            <ClockCountDown RemainingSeconds="30514" />
            <MudIcon Icon="@Icons.Material.Filled.Bolt" Size="Size.Large" />
            <MudText Style="font-style: italic; font-size: 28px; font-weight: bold">GAMING STATION RTX4000 SERIES</MudText>

        </div>

        <div class="d-flex gap-4">
            <MudImage Src="Assets/Images/pc/pc-backdrop.webp" Style="border-radius: 8px; height: 300px"/>
            <div class="horizontal-list" style="overflow-x: scroll">
                <style>
                    .product-title {
                        font-weight: bold;
                        font-size: 16px;
                    }

                    .discount-label {
                        color: #E30019;
                        border: 1px solid #E30019;
                        background-color: #E3001922;
                        padding: 0px 6px;
                        border-radius: 4px;
                        font-weight: 500;
                        height: 21px;
                    }
                </style>
                @for (int i = 0; i <= 4; i++)
                {
                    <div class="item px-4 pt-6 pb-4 d-flex flex-column" >
                        <img src="Assets/Images/pc/@(DummyData.products[i].Id).webp" style="margin-bottom: 14px" />
                        <span class="product-title mb-2">@DummyData.products[i].Name</span>

                        <span style="color: #6D6E72; font-size: 14px; text-decoration: line-through">
                            @formattedPriceOf(@DummyData.products[i].Price)
                        </span>

                        <div class="d-flex gap-2">
                            <span style="color: #E30019; font-size: 18px; font-weight: bold;">
                                @formattedPriceOf(calcDiscountPrice(@DummyData.products[i].Price, @DummyData.products[i].Discount))
                            </span>

                            <div class="discount-label">
                                - @DummyData.products[i].Discount%
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>

    </div>

</div>



@code {
    private string formattedPriceOf(int Price)
    {
        return Price.ToString("#,##0", CultureInfo.GetCultureInfo("vi-VN")) + "₫";
    }
    private int calcDiscountPrice(int Price, int Discount)
    {
        return (int)(Price * (1 - (double)Discount / 100));
    }
}